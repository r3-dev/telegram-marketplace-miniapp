{
  "name": "r3-mvp-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/r3-dev/r3-mvp-stack.git",
  "author": "milanjrodd <milanrodd@gmail.com>",
  "license": "MIT",
  "watch": {
    "typegen": {
      "patterns": [
        "backend",
        "migrations"
      ],
      "extensions": "go"
    }
  },
  "scripts": {
    "dev": "concurrently  -n \"BACKEND,FRONTEND,TYPEGEN\" -c \"cyan,yellow,red\" \"yarn dev:be\" \"yarn dev:fe\" \"yarn watch\"",
    "dev:be": "cd backend && go run . serve",
    "dev:fe": "cd frontend && yarn dev",
    "postinstall": "concurrently  -n \"BACKEND,FRONTEND\" -c \"cyan,yellow\" \"yarn postinstall:be\" \"yarn postinstall:fe\"",
    "postinstall:be": "cd backend && go mod tidy && go mod download",
    "postinstall:fe": "cd frontend && yarn",
    "typegen": "pocketbase-typegen --db ./backend/pb_data/data.db --out ./frontend/pocketbase/pb-types.ts",
    "watch": "npm-watch"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "npm-watch": "^0.11.0",
    "pocketbase-typegen": "^1.1.12"
  },
  "dependencies": {
    "node": "^20.6.0"
  }
}
