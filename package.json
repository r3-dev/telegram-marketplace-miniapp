{
  "name": "r3-mvp-stack",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/r3-dev/r3-mvp-stack.git",
  "author": "milanjrodd <milanrodd@gmail.com>",
  "license": "MIT",
  "watch": {
    "typegen": {
      "patterns": [
        "backend",
        "migrations"
      ],
      "extensions": "go"
    }
  },
  "scripts": {
    "dev": "concurrently --kill-others  -n \"BACKEND,FRONTEND,TYPEGEN\" -c \"cyan,yellow,red\" \"bun run dev:be\" \"bun run dev:fe\" \"bun run watch\"",
    "dev:be": "cd backend && go run . serve",
    "dev:fe": "cd frontend && bun run dev",
    "postinstall": "concurrently  -n \"BACKEND,FRONTEND\" -c \"cyan,yellow\" \"bun run postinstall:be\" \"bun run postinstall:fe\"",
    "postinstall:be": "cd backend && go mod tidy && go mod download",
    "postinstall:fe": "cd frontend && bun install",
    "typegen": "pocketbase-typegen --db ./backend/pb_data/data.db --out ./frontend/pocketbase/pb-types.ts",
    "watch": "npm-watch",
    "ngrok": "bunx ngrok http 3000",
    "install-sqlite-mac-m1": "npm install -d sqlite3 --build-from-source --target_arch=arm64 --fallback-to-build && rm -rf package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "ngrok": "^5.0.0-beta.2",
    "npm-watch": "latest",
    "pocketbase-typegen": "^1.1.13",
    "sqlite3": "^5.1.6"
  },
  "dependencies": {
    "node": "latest"
  },
  "trustedDependencies": [
    "pocketbase-typegen",
    "npm-watch",
    "concurrently",
    "ngrok",
    "node"
  ]
}
